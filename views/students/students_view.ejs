<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/student_view.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <title><%= title %></title>
  </head>

  <body>
    <div class="header">
      <h1><%= title %></h1>
      <p><%= content %></p>
    </div>

    <!-- Add Button -->
    <div class="add-button-container">
      <a href="/students/add" class="add-button">
        <i class="fa-solid fa-plus"></i> Add New Student
      </a>
    </div>

    <div class="student-table">
      <table>
          <tr><th> No </th><th> Name </th><th> Action </th></tr>
          <% students.forEach( function( student, index ){ %>
          <tr>
              <td><%= index + 1 %></td>
              <td><%= student.name %></td>
              <td>
              <div class="actions">
                  <a href="/students/<%= student.id %>" class="btn btn-view" title="View">
                  <i class="fa-solid fa-eye"></i>
                  </a>
                  <a href="/students/update/<%= student.id %>" class="btn btn-edit" title="Edit">
                  <i class="fa-solid fa-pen"></i>
                  </a>
                  <form action="/students/delete/<%= student.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" title="Delete" onclick="return confirm( 'Are you sure you want to delete this student?' )">
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
              </div>
              </td>
          </tr>
          <% }); %>
      </table>
    </div>

  </body>
</html>
